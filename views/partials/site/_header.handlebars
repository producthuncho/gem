<!-- START HEADER -->
<header class="header_wrap fixed-top bg-dark">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand animation" href="/" data-animation="fadeInDown" data-animation-delay="1s">
                <span class="extra" style=" background: -webkit-linear-gradient(rgb(255, 78, 240), rgb(255, 251, 0));
                    -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent;">
                    <img src="/img/l2.jpeg" width="40" alt="">
                    </span>

            </a>
            <button class="navbar-toggler animation" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation" data-animation="fadeInDown" data-animation-delay="1.1s">
                <span class="ion-android-menu"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav m-auto">
                    <li class="dropdown animation" data-animation="fadeInDown" data-animation-delay="1.1s">
                        <a class="nav-link" href="/">home</a></li>

                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.2s"><a
                            class="nav-link nav_item" href="/about">about</a></li>

                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.4s"><a
                            class="nav-link nav_item" href="/pricing-table">Plans</a></li>

                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.5s"><a
                            class="nav-link nav_item" href="/faq">faq's</a></li>
                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.6s"><a
                            class="nav-link nav_item" href="/contact">contact</a></li>
                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.6s"><a
                            class="nav-link nav_item text-success" href="/referral-program">Refer and earn!</a></li>
                </ul>
                <ul class="navbar-nav nav_btn align-items-center">
                    {{#if user}}
                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.8s"><a
                            class="btn btn-default nav_item" href="/dashboard">Dashboard</a></li>
                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.8s"><a
                            class="btn btn-default nav_item" href="#">Balance: $ {{user.balance}}</a></li>
                    {{ else }}
                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.8s"><a
                            class="btn bg-grey nav_item" href="/signup">Sign up</a></li>
                    <li class="animation" data-animation="fadeInDown" data-animation-delay="1.8s"><a
                            class="btn btn-outline-light nav_item" href="/login">Login</a></li>
                    {{/if}}
                </ul>
            </div>
        </nav>
    </div>
    <div class="">
        <script src="https://widgets.coingecko.com/coingecko-coin-price-marquee-widget.js"></script>
        <coingecko-coin-price-marquee-widget coin-ids="bitcoin,ethereum,eos,ripple,litecoin" currency="usd"
            background-color="ivory" locale="en"></coingecko-coin-price-marquee-widget>
    </div>
</header>
<!-- END HEADER -->
<section>
    <h3 class="text-dark p-4"><i class="fa fa-lock"></i> Change Password</h3>
    {{> _msg}}
    <form action="/dashboard/profile/change-password" method="post">
        <div class="row mb-3">

            <div class="col-lg-12">
               
                <div class="row">
                    <div class="col">
                        <div class="card shadow mb-3">
                            <div class="card-body">


                                <div>
                                    <div class="col">
                                        <div class="form-group"><label for="password"><strong>Old Password</strong></label><input class="form-control" type="password"
                                                name="oldPassword" required>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <div class="form-group"><label for="password"><strong>New Password</strong></label><input class="form-control" type="password"
                                                name="newPassword" required>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <div class="form-group"><label for="password"><strong>Confirm New Password</strong></label><input class="form-control" type="password"
                                                name="confirmNewPassword" required>
                                        </div>
                                    </div>

                                    <div class="col">
                                         <div class="form-group"><button class="btn btn-success" type="submit"
                                        name="profilesubmit">Save&nbsp;Settings</button></div> 
                                    </div>
                                </div>
                            </div>
                        </div>

                          

                        </div>

                        </div>

                        </div>

                        </div>

                         
                                
    </form>

</section>











